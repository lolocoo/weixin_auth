                function(data){
                    console.log(data);
                    wx.config({
                        debug: true, 
                        appId: "wxfd34115fe57ef370",
                        timestamp: data['timestamp'],
                        nonceStr: data['nonceStr'], 
                        signature: data['signature'],
                        jsApiList: [
                            'checkJsApi',
